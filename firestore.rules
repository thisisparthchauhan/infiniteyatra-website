rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bookings/{bookingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && request.auth.token.email == 'chauhanparth165@gmail.com';
    }
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /savedTrips/{tripId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /enquiries/{enquiryId} {
      allow create: if true; // Allow anyone to submit an enquiry
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'chauhanparth165@gmail.com';
    }
    match /newsletter_subscribers/{subscriberId} {
      allow create: if true; // Allow anyone to subscribe
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'chauhanparth165@gmail.com';
    }
  }
}
